{
    "id": "control.basic",
    "name": "basic control object",
    "type": "object",
    "properties": {
        "headerName": {
            "type": "string",
            "enum": [ "xpl-cmnd" ]
        },
        "header": {"$ref": "#/definitions/header"},
        "bodyName": {"type": "string"},
        "body": {"$ref": "#/definitions/body"},
        "label": {"type": "string"},
        "bookmark": {"type": "boolean"},
        "house": {"type": "string"},
        "category": {"type": "string"},
        "commands": {"type": "array"}
    },
    "definitions": {
        "header": {
            "properties": {
                    "hop": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    }
            },
            "required": ["hop", "source", "target"]
        },
        "body": {
            "properties": {
                    "device": {
                        "type": "string",
                        "display": "disable"
                    },
                    "type": {
                        "type": "string",
                        "enum": [ "balance", "flag", "infrared", "input", "macro", "mute", "output", "variable", "periodic", "scheduled", "slider", "timer" ],
                        "display": "disable"
                    },
                    "current": {
                        "type": "string",
                        "display": "disable"
                    },
                    "data1": {
                        "type": "string",
                        "display": "disable"
                    },
                    "name": {
                        "type": "string",
                        "display": "disable"
                    }
            },
            "required": ["device", "type", "current"]
        }
    }
}