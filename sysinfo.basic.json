{
    "id": "sysinfo.basic",
    "name": "Basic sysinfo object",
    "type": "object",
    "properties": {
        "headerName": {
            "type": "string",
            "enum": [ "xpl-stat", "xpl-trig" ]
        },
        "header": {"$ref": "#/definitions/header"},
        "bodyName": {"type": "string"},
        "body": {"$ref": "#/definitions/body"},
        "label": {"type": "string"},
        "house": {"type": "string"},
        "category": {"type": "string"},
        "commands": {"type": "array"}
    },
    "definitions": {
        "header": {
            "properties": {
                    "hop": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    }
            },
            "required": ["hop", "source", "target"]
        },
        "body": {
            "properties": {
                    "device": {
                        "type": "string",
                        "display": "disable"
                    },
                    "type": {
                        "type": "string",
                        "display": "disable"
                    },
                    "current": {
                        "type": "string",
                        "display": "disable",
                        "command": false
                    },
                    "unit": {
                        "type": "string",
                        "display": "disable"
                    }
            },
            "required": ["device", "type", "current"] 
        }
    }
}