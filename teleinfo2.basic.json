{
    "id": "teleinfo2.basic",
    "name": "Teleinfo2 basic object",
    "type": "object",
    "properties": {
        "headerName": {
            "type": "string",
            "enum": [ "xpl-stat", "xpl-trig" ]
        },
        "header": {"$ref": "#/definitions/header"},
        "bodyName": {"type": "string"},
        "body": {"$ref": "#/definitions/body"},
        "label": {"type": "string"},
        "bookmark": {"type": "boolean"},
        "house": {"type": "string"},
        "category": {"type": "string"},
        "commands": {"type": "array"}
    },
    "definitions": {
        "header": {
            "properties": {
                    "hop": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    }
            },
            "required": ["hop", "source", "target"]
        },
        "body": {
            "properties": {
                    "device": {
                        "type": "string",
                        "display": "disable"
                    },
                    "type": {
                        "type": "string",
                        "enum": [ "optarif", "isousc", "base", "iinst", "imax", "motdetat", "hchc", "hchp", "ejphn", "ejphpm", "bbrhcjb", "bbrhpjb", "bbrhcjw", "bbrhpjw", "bbrhcjr", "bbrhpjr", "pejp", "ptec", "demain", "adps", "papp", "hhphc" ],
                        "display": "disable"
                    },
                    "current": {
                        "type": "string",
                        "display": "disable",
                        "command": false
                    }
            },
            "required": ["device", "type", "current"]
        }
    }
}